%h2 Anúncios oficiais

.announcements
  - @announcements.each do |a|
    .announcement.container
      %p
        %i= 'Publicado em ' + a.created_at.strftime("%d/%d/%Y às %H:%M:%S.")

      - if a.created_at != a.updated_at
        %p
          %i= 'Atualizado em ' + a.updated_at.strftime("%d/%m/%Y às %H:%M:%S.")

      %p= a.text

      - if current_user.admin
        = link_to 'Editar', edit_announcement_path(a)
        = link_to 'Deletar', announcement_path(a), data: {turbo_method: :delete}
