<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<%= form_with url: session_path, class: 'form' do |form| %>
  <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: "Endereço de e-mail", value: params[:email_address] %><br>
  <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Senha", maxlength: 72 %><br>
  <%= form.submit "Entrar" %>
<% end %>
<br>

<%= link_to "Esqueceu sua senha?", new_password_path %>
<br>
<%= link_to 'Ainda não tem uma conta?', new_user_path %>
