%h2 Criar conta

= render 'errors', errors: @errors

.form
	= form_with model: @user do |form|
		%div
			= form.label 'Usuário'
			= form.text_field :name

		%div
			= form.label 'Endereço de e-mail'
			= form.text_field :email_address

		%div
			= form.label 'Senha'
			= form.password_field :password

		%div
			= form.label 'Confirmação da senha'
			= form.password_field :password_confirmation

		%div
			= form.label 'Código de convite'
			= form.text_field :invite_code

		= form.submit 'Criar conta'
